ORG 0x7c00

SEGMENT $INIT_SEG{
    .start:
        mov ah, 0x00    ; Set screen mode
        mov al, 0x03    ; screen size
        int 0x10        ; bios screen interrupt

        mov ah, 0x0e
        mov al, 0x68
        int 0x10

        mov ah, 0x0e
        mov al, 0x5f
        int 0x10

    .hang:
        hlt
        jmpn .hang

    times 510-@ put 0x00
    put 0x55
    put 0xaa
}
